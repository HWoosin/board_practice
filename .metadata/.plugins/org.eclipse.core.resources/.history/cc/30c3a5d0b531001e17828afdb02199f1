<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<mapper namespace="com.spring.myweb.freeboard.mapper.IFreeBoardMapper">
	
	
	<!-- 
		#동적 SQL 쿼리
		태그로 조건문을 사용하여 쿼리의 실행을 동적으로 제어할 수 있는 문법
		중복된 SQL 쿼리를 피할 수 있고, 상황에 따른 능동적 대처가 가능.
		미리 쿼리문을 준비해 놓고, <include refid="이름(id)"/>를 통해 삽입하여 사용
	 -->
	 <sql id="search">
	 	<if test="condition == 'title'">
	 		where title like concat('%', #{keyword.trim()}, '%')
	 	</if>
	 	<if test="condition == 'writer'">
	 		where writer like concat('%', #{keyword.trim()}, '%')
	 	</if>
	 	<if test="condition == 'content'">
	 		where content like concat('%', #{keyword.trim()}, '%')
	 	</if>
	 	<if test="condition == 'titleContent'">
	 		where title like concat('%', #{keyword.trim()}, '%')
	 		or content like concat('%', #{keyword.trim()}, '%')
	 	</if>
	 </sql>
	 
	 <sql id="myPage">
	 	<if test="loginId != null">
	 		where writer =#{loginId}
	 	</if>
	 
	 </sql>
	 
	<insert id="regist">
		INSERT INTO freeboard
		(title, writer, content, pw)
		VALUES(#{title}, #{writer}, #{content}, #{pw})
	</insert>
	
	<select id="getList" resultType ="board">
		Select * from freeboard
		<include refid="search" />
		order by bno desc
		limit #{pageStart}, #{cpp}
	</select>
	
	<select id="getTotal" resultType ="int">
		Select count(*)
		from freeboard
		<include refid="search" />
	</select>
	
	<select id="getContent" resultType ="int">
		Select count(*) from freeboard
		Where bno = #{bno} and pw = #{pw}
	</select>
	
	<select id="getDetail" resultType ="board">
		Select * from freeboard
		Where bno = #{bno}
	</select>
	
	<update id="update">
		Update freeboard set title = #{title}, content = #{content}, pw = #{pw}
		where bno = #{bno}
	</update>
	
	<delete id="delete">
		Delete from freeboard 
		Where bno = #{bno}
	</delete>
	

</mapper>




